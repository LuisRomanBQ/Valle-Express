<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Valle_Express.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Valle_Express"
    xmlns:views="clr-namespace:Valle_Express.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.NavBarIsVisible="False"
    Shell.BackgroundColor="#d3a370"
    Title="Valle_Express">

    <Shell.FlyoutHeader >
        <StackLayout>
            <Label Text="Valle Express C.O"
                   TextColor="Gray"
                   FontSize="Medium"
                   Padding="30"
                   BackgroundColor="White"/>
        </StackLayout>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Home">
        <ShellContent ContentTemplate="{DataTemplate views:ClienteMainView}"
                      Route="ClienteMainView"/>
    </FlyoutItem>

    <FlyoutItem Title="Repartidor">
        <ShellContent ContentTemplate="{DataTemplate views:RepartidorMainView}"/>
        
     </FlyoutItem>

    <FlyoutItem Title="Negocio">
        <ShellContent ContentTemplate="{DataTemplate views:NegocioMainView}"
                      Route="NegocioMainView"/>
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <Button Text="Cerrar SesiÃ³n"
                BackgroundColor="Red"
                TextColor="White"
                Clicked="Button_Clicked"/>
    </Shell.FlyoutFooter>
</Shell>
