                    <VerticalStackLayout Grid.Column="1" Margin="10, 0, 0, 0" Spacing="0">
                        <Label Text="Repartidor" FontSize="16" FontAttributes="Bold" TextColor="{StaticResource AccentColor}"/>
                        <Label Text="Usuario Google" FontSize="14" TextColor="{StaticResource AccentColor}"/>
                    </VerticalStackLayout>

                    <!-- Reemplazo del Grid con CornerRadius por un Frame para soportar CornerRadius -->
                    <Frame Grid.Column="2" HeightRequest="40" WidthRequest="40" BackgroundColor="White" CornerRadius="20" VerticalOptions="Center" HasShadow="False" Padding="0">
                        <Label Text="ðŸ‘¤" FontSize="20" HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black"/>
                    </Frame>
                </Grid>

                <Grid Grid.Row="1" ColumnDefinitions="*, Auto" Margin="0, 0, 0, 20">

                    <VerticalStackLayout Grid.Column="0" Spacing="5">
                        <Label Text="Carlos RodrÃ­guez" FontSize="24" FontAttributes="Bold" TextColor="{StaticResource MainBGText}"/>
                        <Label Text="â­ 4.9 â€¢ 156 entregas" FontSize="16" TextColor="{StaticResource MainBGText}"/>
                    </VerticalStackLayout>

                    <Switch Grid.Column="1" IsToggled="True" VerticalOptions="Center" ThumbColor="White" OnColor="{StaticResource DarkGreenColor}" BackgroundColor="White" />
                </Grid>

                <BoxView Grid.Row="2" HeightRequest="1" Color="Transparent"/>
            </Grid>

            <Grid BackgroundColor="{StaticResource HeaderColor}" ColumnDefinitions="*, *" Padding="20, 0, 20, 20">

                <Frame Grid.Column="0" BackgroundColor="White" CornerRadius="10" Padding="15" Margin="0, 0, 10, 0" HasShadow="True" BorderColor="Transparent">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="$ Hoy" FontSize="16" TextColor="{StaticResource AccentColor}"/>
                        <Label Text="$85000 MXN" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame Grid.Column="1" BackgroundColor="White" CornerRadius="10" Padding="15" Margin="10, 0, 0, 0" HasShadow="True" BorderColor="Transparent">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="ðŸ“ˆ Total" FontSize="16" TextColor="{StaticResource AccentColor}"/>
                        <Label Text="$2340000 MXN" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
                    </VerticalStackLayout>  
                </Frame>
            </Grid>

            <VerticalStackLayout BackgroundColor="{StaticResource HeaderColor}" Padding="20" Margin="0, 0, 0, 20">
                <Label Text="Pedidos disponibles" FontSize="18" FontAttributes="Bold" TextColor="Black"/>
                <Label Text="Hay pedidos cercanos esperando ser aceptados" FontSize="14" TextColor="{StaticResource AccentColor}" Margin="0, 5, 0, 10"/>

                <Frame BackgroundColor="White" CornerRadius="10" Padding="10, 5" HorizontalOptions="Start" HasShadow="False" BorderColor="Transparent">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding VerPedidosCommand}"/>
                    </Frame.GestureRecognizers>
                    <Label Text="Ver pedidos disponibles" TextColor="Black" FontAttributes="Bold" FontSize="16"/>
                </Frame>
            </VerticalStackLayout>

            <VerticalStackLayout Padding="20, 0, 20, 20" Spacing="10">
                <Label Text="Accesos rÃ¡pidos" FontSize="20" FontAttributes="Bold" TextColor="Black" Margin="0, 0, 0, 10"/>

                <Frame BackgroundColor="White" CornerRadius="10" Padding="15" HasShadow="True" BorderColor="Transparent">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding IrAPedidosCommand}"/>
                    </Frame.GestureRecognizers>
                    <Grid ColumnDefinitions="Auto, *, Auto">
                        <BoxView Grid.Column="0" BackgroundColor="{StaticResource HeaderColor}" WidthRequest="30" HeightRequest="30" CornerRadius="5"/>
                        <VerticalStackLayout Grid.Column="1" Margin="10, 0, 0, 0">
                            <Label Text="Pedidos" FontSize="18" FontAttributes="Bold" TextColor="Black"/>
                            <Label Text="Ver pedidos disponibles" FontSize="14" TextColor="{StaticResource AccentColor}"/>
                        </VerticalStackLayout>
                        <Frame Grid.Column="2" BackgroundColor="{StaticResource DarkGreenColor}" CornerRadius="10" Padding="10, 2" HorizontalOptions="End" VerticalOptions="Center">
                            <Label Text="2" TextColor="White" FontSize="14" FontAttributes="Bold"/>
                        </Frame>
                    </Grid>
                </Frame>

                <Frame BackgroundColor="White" CornerRadius="10" Padding="15" HasShadow="True" BorderColor="Transparent">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding IrAGananciasCommand}"/>
                    </Frame.GestureRecognizers>
                    <Grid ColumnDefinitions="Auto, *">
                        <BoxView Grid.Column="0" BackgroundColor="{StaticResource HeaderColor}" WidthRequest="30" HeightRequest="30" CornerRadius="5"/>
                        <VerticalStackLayout Grid.Column="1" Margin="10, 0, 0, 0">
                            <Label Text="Ganancias" FontSize="18" FontAttributes="Bold" TextColor="Black"/>
                            <Label Text="Historial de ingresos" FontSize="14" TextColor="{StaticResource AccentColor}"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <Frame BackgroundColor="White" CornerRadius="10" Padding="15" HasShadow="True" BorderColor="Transparent">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding IrAUbicacionCommand}"/>
                    </Frame.GestureRecognizers>
                    <Grid ColumnDefinitions="Auto, *, Auto">
                        <BoxView Grid.Column="0" BackgroundColor="{StaticResource HeaderColor}" WidthRequest="30" HeightRequest="30" CornerRadius="5"/>
                        <VerticalStackLayout Grid.Column="1" Margin="10, 0, 0, 0">
                            <Label Text="UbicaciÃ³n" FontSize="18" FontAttributes="Bold" TextColor="Black"/>
                            <Label Text="GPS activo" FontSize="14" TextColor="{StaticResource AccentColor}"/>
                        </VerticalStackLayout>
                        <BoxView Grid.Column="2" BackgroundColor="{StaticResource DarkGreenColor}" WidthRequest="10" HeightRequest="10" CornerRadius="5" HorizontalOptions="End" VerticalOptions="Center"/>
                    </Grid>
                </Frame>
            </VerticalStackLayout>

            <Grid BackgroundColor="{StaticResource GreenColor}" ColumnDefinitions="*, Auto" Padding="20" Margin="20, 0, 20, 20" RowSpacing="0">
                <VerticalStackLayout Grid.Column="0">
                    <Label Text="SuscripciÃ³n" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource AccentColor}"/>
                    <Label Text="Vence el: 29/11/2025" FontSize="14" TextColor="{StaticResource AccentColor}"/>
                </VerticalStackLayout>

                <Frame Grid.Column="1" BackgroundColor="White" CornerRadius="10" Padding="10, 5" HorizontalOptions="End" VerticalOptions="Center" HasShadow="False" BorderColor="Transparent">
                    <Label Text="Activa" TextColor="{StaticResource DarkGreenColor}" FontAttributes="Bold" FontSize="16"/>
                </Frame>
            </Grid>

