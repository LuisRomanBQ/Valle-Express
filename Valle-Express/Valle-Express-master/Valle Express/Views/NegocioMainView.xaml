<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Valle_Express.Views.NegocioMainView"
             Title="NegocioMainView">
    <ContentPage.Resources>
        <Color x:Key="HeaderColor">#d3a370</Color>
        <Color x:Key="AccentColor">#333</Color>
        <Color x:Key="GreenColor">#A2E0A2</Color>
        <Color x:Key="DarkGreenColor">#008000</Color>
        <Color x:Key="MainBGText">#FFFFFF</Color>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout BackgroundColor="WhiteSmoke">

            <Grid BackgroundColor="{StaticResource HeaderColor}" RowDefinitions="Auto, Auto, 1" Padding="20, 30, 20, 0">

                <Grid Grid.Row="0" ColumnDefinitions="Auto, *, Auto" VerticalOptions="Start" Margin="0, 0, 0, 20">

                    <!-- Sustituye el Grid con CornerRadius por un Frame para soportar CornerRadius -->
                    <Frame Grid.Column="0" HeightRequest="40" WidthRequest="40" BackgroundColor="White" CornerRadius="20" VerticalOptions="Center" HasShadow="False" Padding="0">
                        <Label Text="" FontSize="20" HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black"/>
                    </Frame>

                    <VerticalStackLayout Grid.Column="1" Margin="10, 0, 0, 0" Spacing="0">
                        <Label Text="Negocio" FontSize="16" FontAttributes="Bold" TextColor="{StaticResource AccentColor}"/>
                        <Label Text="Usuario Google" FontSize="14" TextColor="{StaticResource AccentColor}"/>
                    </VerticalStackLayout>

                </Grid>

                <Grid Grid.Row="1" ColumnDefinitions="*, Auto" Margin="0, 0, 0, 20">

                    <VerticalStackLayout Grid.Column="0" Spacing="5">
                        <Label Text="Pizza Prision" FontSize="24" FontAttributes="Bold" TextColor="{StaticResource MainBGText}"/>
                        <Label Text="⭐ 4.9 • 156 entregas" FontSize="16" TextColor="{StaticResource MainBGText}"/>
                    </VerticalStackLayout>

                    <Grid ColumnDefinitions="*,*" VerticalOptions="Center" Grid.Column="1">
                        <Label Text="{Binding TextSwitch}" TextColor="White" Grid.Column="0" VerticalOptions="Center"/>

                        <Switch Grid.Column="1" 
                                IsToggled="{Binding Abierto}" 
                                VerticalOptions="Center" 
                                OnColor="ForestGreen" 
                                BackgroundColor="{StaticResource HeaderColor}">
                        </Switch>
                    </Grid>

                </Grid>
            </Grid>

            <VerticalStackLayout BackgroundColor="{StaticResource HeaderColor}" Padding="20" Margin="0, 0, 0, 20">
                <Label Text="Pedidos disponibles" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource MainBGText}"/>
                <Label Text="Hay pedidos cercanos esperando ser aceptados" FontSize="14" TextColor="{StaticResource MainBGText}" Margin="0, 5, 0, 10"/>

                <Frame BackgroundColor="White" CornerRadius="10" Padding="10, 5" HorizontalOptions="Start" HasShadow="False" BorderColor="Transparent">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding VerPedidosCommand}"/>
                    </Frame.GestureRecognizers>
                    <Label Text="Ver pedidos disponibles" TextColor="Black" FontAttributes="Bold" FontSize="16"/>
                </Frame>
            </VerticalStackLayout>

            <VerticalStackLayout Padding="20, 0, 20, 20" Spacing="10" BackgroundColor="WhiteSmoke">
                <Label Text="Accesos rápidos" FontSize="20" FontAttributes="Bold" TextColor="Black" Margin="0, 0, 0, 10"/>

                <Frame BackgroundColor="White" CornerRadius="10" Padding="15" HasShadow="True" BorderColor="Transparent">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding IrAHistorialCommand}"/>
                    </Frame.GestureRecognizers>
                    <Grid ColumnDefinitions="Auto, *, Auto">
                        <BoxView Grid.Column="0" BackgroundColor="{StaticResource HeaderColor}" WidthRequest="30" HeightRequest="30" CornerRadius="5"/>
                        <VerticalStackLayout Grid.Column="1" Margin="10, 0, 0, 0">
                            <Label Text="Pedidos" FontSize="18" FontAttributes="Bold" TextColor="Black"/>
                            <Label Text="Ver historial de pedidos" FontSize="14" TextColor="{StaticResource AccentColor}"/>
                        </VerticalStackLayout>
                        <Frame Grid.Column="2" BackgroundColor="{StaticResource DarkGreenColor}" CornerRadius="10" Padding="10, 2" HorizontalOptions="End" VerticalOptions="Center">
                            <Label Text="2" TextColor="White" FontSize="14" FontAttributes="Bold"/>
                        </Frame>
                    </Grid>
                </Frame>

                <Frame BackgroundColor="White" CornerRadius="10" Padding="15" HasShadow="True" BorderColor="Transparent">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding IrAGananciasCommand}"/>
                    </Frame.GestureRecognizers>
                    <Grid ColumnDefinitions="Auto, *">
                        <BoxView Grid.Column="0" BackgroundColor="{StaticResource HeaderColor}" WidthRequest="30" HeightRequest="30" CornerRadius="5"/>
                        <VerticalStackLayout Grid.Column="1" Margin="10, 0, 0, 0">
                            <Label Text="Ganancias" FontSize="18" FontAttributes="Bold" TextColor="Black"/>
                            <Label Text="Historial de ingresos" FontSize="14" TextColor="{StaticResource AccentColor}"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <Frame BackgroundColor="White" CornerRadius="10" Padding="15" HasShadow="True" BorderColor="Transparent">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding IrAMenuCommand}"/>
                    </Frame.GestureRecognizers>
                    <Grid ColumnDefinitions="Auto, *, Auto">
                        <BoxView Grid.Column="0" BackgroundColor="{StaticResource HeaderColor}" WidthRequest="30" HeightRequest="30" CornerRadius="5"/>
                        <VerticalStackLayout Grid.Column="1" Margin="10, 0, 0, 0">
                            <Label Text="Menu" FontSize="18" FontAttributes="Bold" TextColor="Black"/>
                            <Label Text="Editar productos del negocio" FontSize="14" TextColor="{StaticResource AccentColor}"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>
            </VerticalStackLayout>

            <Grid BackgroundColor="{StaticResource GreenColor}" ColumnDefinitions="*, Auto" Padding="20" Margin="20, 0, 20, 20" RowSpacing="0">
                <VerticalStackLayout Grid.Column="0">
                    <Label Text="Suscripción" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource AccentColor}"/>
                    <Label Text="Vence el: 29/11/2025" FontSize="14" TextColor="{StaticResource AccentColor}"/>
                </VerticalStackLayout>

                <Frame Grid.Column="1" BackgroundColor="White" CornerRadius="10" Padding="10, 5" HorizontalOptions="End" VerticalOptions="Center" HasShadow="False" BorderColor="Transparent">
                    <Label Text="Activa" TextColor="{StaticResource DarkGreenColor}" FontAttributes="Bold" FontSize="16"/>
                </Frame>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>